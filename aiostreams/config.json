{
  "name": "AIOStreams",
  "version": "0.1.2",
  "slug": "aiostreams",
  "description": "Self-hosted AIOStreams for Stremio with HA Ingress support.",
  "url": "https://github.com/Viren070/AIOStreams",
  "arch": ["aarch64", "amd64"],
  "image": "ghcr.io/viren070/aiostreams",
  "startup": "services",
  "boot": "auto",
  "ingress": true,
  "ingress_port": 3000,
  "ports": {
    "3000/tcp": 3000
  },
  "map": ["config:rw"],
  "options": {
    "addon_name": "AIOStreams",
    "addon_id": "aiostreams.homeassistant.local",
    "secret_key": "",
    "addon_password": "",
    "database_uri": "sqlite://./data/db.sqlite",
    "base_url": "",
    "tmdb_access_token": "",
    "log_level": "info"
  },
  "schema": {
    "addon_name": "str",
    "addon_id": "str",
    "secret_key": "password",
    "addon_password": "password?",
    "database_uri": "str",
    "base_url": "str?",
    "tmdb_access_token": "password?",
    "log_level": "list(error|warn|info|http|verbose|debug|silly)?"
  },
  "environment": {
    "ADDON_NAME": "{{addon_name}}",
    "ADDON_ID": "{{addon_id}}",
    "SECRET_KEY": "{{secret_key}}",
    "ADDON_PASSWORD": "{{addon_password}}",
    "DATABASE_URI": "{{database_uri}}",
    "BASE_URL": "{{base_url}}",
    "PORT": "3000",
    "TMDB_ACCESS_TOKEN": "{{tmdb_access_token}}",
    "LOG_LEVEL": "{{log_level}}"
  },
  "panel_icon": "mdi:movie-open",
  "panel_title": "AIOStreams"
}
